{
  "compilerOptions": {
    "target": "ESNext", 
    "jsx": "react-jsx", // 这里改成react-jsx，就不需要在tsx文件中手动引入React了
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./typings/*.d.ts", "node_modules/@types", "*.scss"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src", "./typings/*.d.ts"]
}
